# Janitorr GUI Configuration
# Copy this file to .env and modify the values for your setup

# GUI Settings
GUI_AUTO_REFRESH=60
GUI_THEME=dark
JANITORR_CONFIG_PATH=/var/www/janitorr/application.yml
JANITORR_LOG_PATH=/var/log/janitorr/janitorr.log
JANITORR_WORKING_DIR=/var/www/janitorr

# Authentication Settings
# Authentication mode is automatically determined based on which methods are enabled:
# - Both legacy and LDAP enabled = "LDAP with Legacy Fallback"
# - Only LDAP enabled = "LDAP Authentication"  
# - Only legacy enabled = "Legacy Authentication"
# - Neither enabled = "No Authentication"
# 
# Optional: Force a specific mode by uncommenting the line below
# GUI_AUTH_MODE=both
GUI_SESSION_SECRET_KEY=change-this-secret-key-in-production
GUI_SESSION_TIMEOUT=24
GUI_SESSION_SECURE_COOKIES=false
GUI_SESSION_REMEMBER_ME=true

# Legacy Authentication
# Enable if using legacy or both auth modes
GUI_LEGACY_AUTH_ENABLED=false
GUI_LEGACY_AUTH_USERNAME=admin
GUI_LEGACY_AUTH_PASSWORD=

# LDAP Authentication
# Enable if using ldap or both auth modes
GUI_LDAP_ENABLED=false
GUI_LDAP_SERVER=localhost
GUI_LDAP_PORT=389
GUI_LDAP_BASE_DN=dc=yunohost,dc=org
GUI_LDAP_USER_FILTER=uid={}
GUI_LDAP_BIND_DN=
GUI_LDAP_BIND_PASSWORD=
GUI_LDAP_ADMIN_GROUP=cn=admins,ou=groups,dc=yunohost,dc=org
GUI_LDAP_USE_SSL=false
GUI_LDAP_VERIFY_SSL=true
GUI_LDAP_GROUP_STRATEGY=auto

# For other LDAP providers, see dev/LDAP_CONFIGURATION_EXAMPLES.md
